@page "/Users/Registro"
    <!--para modificar el como saldra la url-->
@model RegisterModel
@{

    var image = "/images/images/default.png"; //direccion de imagen por defecto

}

<h1>Brian</h1>

<div class="container p-4">
    <form method="post" enctype="multipart/form-data"><!--se envia utilizando la peticion post-->
        <!--enviara infromacion por el metodo post y se indica que se utilizan archivos-->
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="card text-center">
                    <!--tarjeta con texto centrado-->
                    <div class="card-header">
                        <output id="imageUser">
                            <img src=@image class="imageUser" /><!--se asigna el variable image al atributo con clase imageUser -->
                        </output>
                    </div>
                    <div class="card-body">
                        <div class="caption text-center">
                            <label class="btn btn-primary" for="files">Cargar Foto</label><!--clase de estylo del boton-->
                            <input asp-for="Input.AvatarImage" accept="image/*" type="file" id="files" /><!--se vincula con la propiedad, se cargan archivos de tipo imagenes, typo files -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-5">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-tittle">Registrar Usuario</h3>
                    </div>
                    <div class="panel-body">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <!--con boveda uno-->
                                    <div id="header" class="bg-info">
                                        <!--div para mostrar informacion de la cabezera-->
                                        <h2 class="mb-0 t">
                                            <button class="btn btn-link text-light" type="button" data-toggle="collapse"
                                                    data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                <!--animacion collapse de bostrap cada vez que se le de al boton genera una animacion de acordeon-->
                                                Ingrese informacion por favor.
                                            </button>
                                        </h2>
                                    </div>
                                </div>
                                <!--se crea el colapso el cual se llama arriba-->
                                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                     data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <!--agrupacion de controles-->
                                            <input asp-for="Input.NID" placeholder="NID" class="form-control" autofocus /><!--placer holder muestra en el campo de texto "NID", clase con style-->
                                            <span asp-validation-for="Input.NID" class="text-danger"></span><!--muestra validacion segun el servidor(InputModelRegister)-->
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.Name" placeholder="Nombre" class="form-control" />
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.LastName" placeholder="Apellido" class="form-control" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.PhoneNumber" placeholder="Numero Celular" class="form-control" />
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.Email" placeholder="Correo Electronico" class="form-control" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group"><!--metodo de control de tipo selec que la informacion pasa a la propiedad Input.Role, segundo se pasa la case para crear una coleccion de datos (value es para tener la id- por eso se pone texto)-->
                                            @Html.DropDownList("Input.Role", new SelectList(Model.Input.rolesLista, "Text", "Text"), "Seleccione un rol", new { @class = "form-control" })
                                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                                        </div>
                                        <div class="form-group">
                                            <label class="text-danger">@Html.DisplayFor(m => m.Input.ErrorMessage)</label><!--se usa la propiedad para mostrar informacion desde el servidor hacia la interfaz de usuario-->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>
@section Scripts {<!--llamar archivos javascript que nos proporcionan un archivo parcial el cual contiene el nombre del archivo que esta en la carpeta view del proyecto -->
    <partial name="_ValidationScriptsPartial"/>
}